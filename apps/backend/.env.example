# Power Solar Backend Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
PORT=3001
API_PREFIX=api
CORS_ORIGINS=http://localhost:5173

# ============================================================================
# Database Configuration - PostgreSQL (Recommended)
# ============================================================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=powersolar
DB_PASSWORD=your-secure-password
DB_NAME=powersolar
DB_SSL=false
DB_SYNCHRONIZE=true
DB_LOGGING=false

# For Production
# DB_SSL=true
# DB_SYNCHRONIZE=false
# DB_LOGGING=false

# ============================================================================
# Database Configuration - SQLite (Development Alternative)
# ============================================================================
# DB_TYPE=sqlite
# DB_NAME=powersolar.db
# DB_SYNCHRONIZE=true
# DB_LOGGING=false

# ============================================================================
# Security Configuration
# ============================================================================
# IMPORTANT: Change this in production! Minimum 32 characters
JWT_SECRET=change-this-to-a-secure-random-string-minimum-32-characters-long
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false

# ============================================================================
# Monitoring Configuration
# ============================================================================
ENABLE_METRICS=false
ENABLE_HEALTH_CHECK=true
# SENTRY_DSN=https://your-sentry-dsn (optional)

# ============================================================================
# Company Information
# ============================================================================
COMPANY_NAME=Power Solar
COMPANY_PHONE=087-0644982
COMPANY_EMAIL=info@powersolar.ie
COMPANY_ADDRESS=5 Russell Close, Gracefield Manor, Ballylinan, Co. Laois
COMPANY_EIRCODE=R14FH59
COMPANY_SERVICE_AREAS=Dublin,Leinster,Kildare,Meath,Wicklow,Louth,Laois,Wexford,Carlow

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

